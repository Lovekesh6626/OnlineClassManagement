                    transition: 0s;
                }



                .sidebar li:hover .tooltip {
                    opacity: 1;
                    pointer-events: auto;
                    transition: all 0.4s ease;
                    top: 50%;
                    transform: translateY(-50%);
                }



            .sidebar.open li .tooltip {
                display: none;
            }



            .sidebar input {
