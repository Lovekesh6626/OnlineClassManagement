            }



            .sidebar.open .bx-search:hover {
                background: #1d1b31;
                color: #FFF;
            }



            .sidebar .bx-search:hover {
                background: #FFF;
                color: #11101d;
            }



            .sidebar li a {
                display: flex;
                height: 100%;
                width: 100%;
                border-radius: 12px;
                align-items: center;
                text-decoration: none;
                transition: all 0.4s ease;
                background: #11101D;
            }



                .sidebar li a:hover {
                    background: #FFF;
                }



                .sidebar li a .links_name {
                    color: #fff;
                    font-size: 15px;
                    font-weight: 400;
                    white-space: nowrap;
                    opacity: 0;
                    pointer-events: none;
                    transition: 0.4s;
                }



            .sidebar.open li a .links_name {
