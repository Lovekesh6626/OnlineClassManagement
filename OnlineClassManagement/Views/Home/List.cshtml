<script>

function move() {
  
    i = 1;
    
    var elem = document.getElementById("myBar");
    var width = 1;
    var id = setInterval(frame, 10);
    function frame() {
      if (width >= 16) {
        clearInterval(id);
        i = 0;
      } else {
        width++;
          elem.style.width = width + "%";
          i++;
      }
    }
    
   
}
</script>









